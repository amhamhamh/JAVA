package com.bitcamp.java.board;

import java.util.Scanner;

public class ConsoleMain {
	static Scanner kb;
	/** 본 프로그램 들어오기 전에 검색 기능 구현하기 
	 * 자바 문법을 활용한 게시판 구현하기
	 * 1. 사용자 환경(UI) main 함수에서 처리 
	 * 2. 게시글 관리 - service
	 * 3. 회원 관리 = service
	 * @param args
	 */
	public static void main(String[] args) {		
	
		Scanner kb = new Scanner(System.in); // 주입
		ContentSerivce ctservice = new ContentSerivce();
		UserService userservice = new UserService();
		int cmd;
		boolean loggin = false;
		String userName = "";// or null로 표현 
		final int UEXIT = 0;
		
		while(true){
			// 게시글 목록
			Content[] contents = ctservice.getAll(); 
			if(contents != null)
				list(contents);
			}System.out.println("등록된거 없어요.");						
			System.out.println(
				"[1]write[2]view[3]join[4]login[5]logout[0]Exit"
			); 
			cmd = kb.nextInt(); kb.nextLine();
			
			if( cmd == UEXIT) {	
				break;
			}
 
			switch(cmd) {
			
			case 1:
				// 글쓰기 . 로긴을 해야 한다...
				if( loggin ) {
					ctservice.save(registContent(userName));
				}else {
					System.out.println("please login");
				}
				break;
			case 2:
				// 하나의 글을 선택해서 상세 보기 화면
				System.out.println("글번호 : ");
				int no = kb.nextInt();kb.nextLine();
				if( 0 <= no && no < ctservice.getTotal() ) {
					Content content = 
							ctservice.getContentByIndex(no);
					// 객체명을 전달하면 객체명. toString() 실행된다...s
					System.out.println(content);// 수정,삭제
				}else {
					System.out.println("invalid no");
				}
				break;
			case 3:
				System.out.println("ID : ");
				String id = kb.nextLine();
				System.out.println("PW : ");
				String pw = kb.nextLine();
				System.out.println("Name : ");
				String name = kb.nextLine();
				
				User user = new User();
				user.id = id;
				user.pw = pw;
				user.name = name;
				
				userservice.join(user);
				break;
			case 4:			
				System.out.println("ID : ");				
				id = kb.nextLine();				// switch는 각 case에 대해서 전부 영향을 받기 때문에 상관 없음. 
				System.out.println("PW : ");
				pw = kb.nextLine();
				//조건연산자 : 삼항연산자(선택적 대입) - if문 대신 쓰는 거. 
//				loggin =
//						(userservice.login(id,pw)) ? true:false;
				
				//실행할 내용이 여러 개(줄)
				
				if(userservice.login(id,pw)) {
					loggin = true;
					userName = id;					
				}else{
					loggin = false;
					userName = null;
				};			
				break;
			case 5:
				loggin = false;
				userName = null;
				userservice.logout();
				break;			
			}
			
			kb.close(); // 키보드 입력을 닫은 후에는 사용할 수 없음.	
		}// end loop. 전역변수로 선언될 수 있을 수록 독자성을 가지고 어려움.
		
		
		private static void registContent(String userName) {
			Content content = new Content();
			content.name = userName;
			System.out.println("Title >");
			content.title = kb.nextLine();
			System.out.println("T >");
			content.text = kb.nextLine();			
			return userName;
			
		
	}
		private static void list(Content[] board) {
			// TODO: 게시글 목록 출력. 번호,제목,작성자
			String str="";
			for(int i=0; i < board.length; ++i) {
				str = "["+i+"]\t";
				str += board[i].title+"\t";
				str += board[i].name+"\n";		
			}
			System.out.println(str); // 웬만하면 출력은 한 번만 해라.
		}
			
		 
		

	}


