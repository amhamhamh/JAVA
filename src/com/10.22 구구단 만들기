package sample.MyApp;

public class Ex3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		gugudan();
		dofor1();
		dofor2();
	}

	private static void dofor2() {
		int count = 0;
		for (int v = 1; v <= 25; v++) {
			System.out.print(v + "");
			count++;
			if (count % 5 == 0) {// 행을 내리는 조건
				System.out.println();
			} // if(count == 5) {// 행을 내리는 조건 //
			System.out.println(); // count=0; // 각 행 단위의 갯수 // }

		}
	}

	private static void dofor1() {
		// 2씩 증가시키기
		for (int v = 1; v <= 25; v *= 3) {
			System.out.println(v);
		}

	}

	private static void gugudan() {

		for (int dan = 2; dan <= 7; dan++) {
			for (int i = 1; i <= 9; i++) {
				for (int k = 0; k <= 2; k++) { // 행을 나타내는 항목
					if ((dan + k) < 10) {
						System.out.print((dan + k) + "X" + i + "=" + ((dan + k) * i) + "\t");
					}
				}
				System.out.println();
			}
			System.out.println("---------------------");
		}
	}// end

}
